<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.MenuItem?>
<VBox alignment="CENTER" prefHeight="407.0" prefWidth="620.0"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tourplanner.HelloController">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Import file"/>
            <MenuItem text ="Export file" />
        </Menu>
        <Menu text="Edit">
        </Menu>
        <Menu text="Options">
            <MenuItem text="Create tour report"/>
            <MenuItem text ="Create summarize report" />
        </Menu>
        <Menu text="Help">
        </Menu>
    </MenuBar>
    <fx:include fx:id="searchBar" source="Searchbar.fxml" />
    <SplitPane dividerPositions="0.3" orientation="HORIZONTAL" VBox.vgrow="ALWAYS">
        <fx:include fx:id="tourListfx" source="TourList.fxml" />
        <fx:include fx:id="tourdetailsfx" source="TourDetails.fxml" />
    </SplitPane>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</VBox>
